// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

model Quote {
  id          String   @id @default(cuid())
  destination String
  startDate   DateTime
  endDate     DateTime
  adults      Int
  children    Int
  infants     Int
  airline     String?
  hotel       String?
  travelStyle String[]
  budget      String?
  name        String
  phone       String
  email       String?
  requests    String?
  attachments String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
