// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Quote {
  id          String   @id @default(cuid())
  destination String
  startDate   DateTime
  endDate     DateTime
  adults      Int
  children    Int
  infants     Int
  airline     String?
  hotel       String?
  travelStyle String[]
  budget      String?
  name        String
  phone       String
  email       String?
  userId      String?  // 로그인한 사용자 ID
  requests    String?
  attachments String[]
  status      String?  // pending, processing, completed, cancelled
  notes       String?  // 관리자 메모
  adminResponse String? // 관리자 응답 메시지
  adminFiles    String[] // 관리자 첨부파일
  responseDate  DateTime? // 관리자 응답 날짜
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
